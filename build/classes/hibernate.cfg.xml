<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/pfe</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="show_sql">true</property>		
        <property name="hbm2ddl.auto">create/update</property>
        <mapping class="com.gcollecte.model.User" /> 
        <mapping class="com.gcollecte.model.Projet" />
      
 <mapping class="com.gcollecte.model.Puits" />
  <mapping class="com.gcollecte.model.Status" />
  <mapping class="com.gcollecte.model.Format" />
                <mapping class="com.gcollecte.model.Document" />
        
                <mapping class="com.gcollecte.model.Locateur" />
                <mapping class="com.gcollecte.model.Compagne" />
                        <mapping class="com.gcollecte.model.Permis" />
                                <mapping class="com.gcollecte.model.Echelle" />
                                <mapping class="com.gcollecte.model.Image" />
                                                                <mapping class="com.gcollecte.model.Cordonnees" />
                                
        
    </session-factory>
</hibernate-configuration>
